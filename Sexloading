local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- GUI Setup
local loadingGui = Instance.new("ScreenGui")
loadingGui.Name = "FakeLoadingGUI"
loadingGui.IgnoreGuiInset = true
loadingGui.ResetOnSpawn = false
loadingGui.DisplayOrder = 999999
loadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
loadingGui.Parent = playerGui

-- Background
local background = Instance.new("Frame")
background.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.Parent = loadingGui

-- Title
local title = Instance.new("TextLabel")
title.Text = "Initializing System..."
title.Font = Enum.Font.GothamBold
title.TextSize = 40
title.TextColor3 = Color3.fromRGB(0, 170, 255)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 60)
title.Position = UDim2.new(0, 0, 0.35, -100)
title.Parent = background

-- Loading Percent Text
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0, 300, 0, 50)
loadingText.Position = UDim2.new(0.5, -150, 0.5, -25)
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingText.TextScaled = true
loadingText.Font = Enum.Font.GothamBlack
loadingText.Text = "Loading... 0%"
loadingText.Parent = background

-- Progress bar background
local progressBarBackground = Instance.new("Frame")
progressBarBackground.Size = UDim2.new(0, 400, 0, 20)
progressBarBackground.Position = UDim2.new(0.5, -200, 0.5, 40)
progressBarBackground.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
progressBarBackground.BorderSizePixel = 0
progressBarBackground.Parent = background

-- Progress bar fill
local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.Position = UDim2.new(0, 0, 0, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBarBackground

-- Scary Warning Message (AT THE START)
local warningLabel = Instance.new("TextLabel")
warningLabel.Size = UDim2.new(1, -40, 0, 60)
warningLabel.Position = UDim2.new(0.5, -200, 0.65, 80)
warningLabel.BackgroundTransparency = 1
warningLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
warningLabel.TextScaled = true
warningLabel.Font = Enum.Font.GothamBold
warningLabel.Text = "⚠️ DON'T LEAVE THE GAME OR IT WILL NOT LOAD AGAIN WHEN YOU REJOIN."
warningLabel.TextWrapped = true
warningLabel.Parent = background

-- TweenService for smooth progress bar
local TweenService = game:GetService("TweenService")

-- Fake loading logic (10 minutes)
local totalTime = 600
local steps = 100
local timePerStep = totalTime / steps

for i = 0, steps do
	loadingText.Text = "Loading... " .. i .. "%"

	local progress = i / 100
	local tween = TweenService:Create(progressBar, TweenInfo.new(timePerStep, Enum.EasingStyle.Linear), {
		Size = UDim2.new(progress, 0, 1, 0)
	})
	tween:Play()

	task.wait(timePerStep)
end

-- Stuck at 100%
loadingText.Text = "Loading... 100%"
title.Text = "Finalizing Memory Sectors..."

-- Keep GUI forever
while true do
	task.wait()
end
